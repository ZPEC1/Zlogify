<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= blog.title %></title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
  <style>
    body {
      background-color: #fffdf2;
      font-family: 'Segoe UI', sans-serif;
    }

    .blog-card {
      background: white;
      border-radius: 16px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.06);
      margin-top: 2rem;
      overflow: hidden;
    }

    .video-wrapper {
      display: flex;
      justify-content: center;
      padding: 1rem 2rem;
    }

    .video-thumbnail {
      position: relative;
      cursor: pointer;
      width: 100%;
      max-width: 768px;
      border-radius: 12px;
      overflow: hidden;
    }

    .video-thumbnail img {
      width: 100%;
      height: auto;
      display: block;
    }

    .play-button {
      position: absolute;
      top: 50%;
      left: 50%;
      width: 70px;
      height: 70px;
      transform: translate(-50%, -50%);
      background: url('/images/play-button.png') no-repeat center center;
      background-size: contain;
      opacity: 0.9;
    }

    .blog-content {
      padding: 2rem;
    }

    .blog-content img {
      max-width: 100%;
      height: auto;
      display: block;
      margin: 1rem 0;
      border-radius: 8px;
    }

    h1 {
      font-weight: 700;
      font-size: 2.4rem;
      color: #333;
      padding: 2rem 2rem 0 2rem;
    }

    p {
      font-size: 1.1rem;
      line-height: 1.8;
      color: #444;
    }

    .btn-group {
      gap: 1rem;
    }

    .btn {
      border-radius: 12px;
      padding: 0.6rem 1.2rem;
      font-weight: 500;
    }
  </style>
</head>

<body style="background-color: #fffdf2;">
  <%- include('partials/header') %>

  <div class="container">
    <div class="blog-card">
      <h1><%= blog.title %></h1>

      <% 
        const match = blog.content.match(/youtube\.com\/embed\/([a-zA-Z0-9_-]+)/);
        const videoId = match ? match[1] : null;

        // Remove the first video iframe only
        const cleanedContent = blog.content.replace(/<iframe.*?youtube\.com\/embed\/.*?<\/iframe>/, '');
      %>

      <% if (videoId) { %>
        <div class="video-wrapper">
          <div class="video-thumbnail" data-video-id="<%= videoId %>">
            <img src="https://img.youtube.com/vi/<%= videoId %>/hqdefault.jpg" alt="YouTube Thumbnail">
            <div class="play-button"></div>
          </div>
        </div>
      <% } %>

      <div class="blog-content">
        <%- cleanedContent %> <!-- Images will show normally, iframe video is removed -->
        
        <div class="btn-group mt-4 d-flex flex-wrap">
          <a href="/blogs/<%= blog._id %>/edit" class="btn btn-warning">Edit</a>
          <form action="/blogs/<%= blog._id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this blog?');">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
          <a href="/" class="btn btn-secondary ms-auto">Back to Home</a>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script>
    document.querySelectorAll('.video-thumbnail').forEach(thumbnail => {
      thumbnail.addEventListener('click', function () {
        const videoId = this.getAttribute('data-video-id');
        const iframe = document.createElement('iframe');
        iframe.setAttribute('src', `https://www.youtube.com/embed/${videoId}?autoplay=1`);
        iframe.setAttribute('frameborder', '0');
        iframe.setAttribute('allowfullscreen', '');
        iframe.setAttribute('allow', 'autoplay; encrypted-media');
        iframe.style.width = '100%';
        iframe.style.height = '420px';
        this.replaceWith(iframe);
      });
    });
  </script>
</body>
</html>
